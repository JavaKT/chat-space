
.chat
  .chat__side
    .chat__side__header
      %p.original
        = current_user.name
      =link_to new_group_path(current_user)   do
        = fa_icon "edit" , class:"chat__side__header__icon--font"
      =link_to edit_user_path(current_user) do 
        = fa_icon "cog",   class:"chat__side__header__icon--font"

    .chat__side__group
      .chat__side__group__id
        .chat__side__group__id__name
          Groupname
        .chat__side__group__id__messages 
          messages

  .chat__main
    .chat__main__header
      .chat__main__header__name  
        %p.username Username
        %p.member group members
      .chat__main__header__edit
        Edit
          
    .chat__main__content
      .chat__main__content__message
        .chat__main__content__message__name
          %p.name Kota Ito
          %p.timestamp Timestamps
        %p.text Hello World
    .chat__main__post
      .chat__main__post__input
        .chat__main__post__input__box
          %input.input{:placeholder => "type a message"}
          %label.label{for: "upload-icon"}
            = fa_icon "image"
            %input{type: "file",id: "upload-icon"} 
        %input.send{:type => "submit",:value => "Send"}